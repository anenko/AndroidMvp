<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="holder"
            type="com.alex.pattern.ui.home.UsersAdapter.ViewHolder" />
    </data>

    <RelativeLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_margin="@dimen/space_x2"/>

        <TextView
            android:id="@+id/textView_login"
            tools:text="login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/imageView_avatar"
            android:layout_toEndOf="@+id/imageView_avatar"
            android:layout_marginStart="@dimen/space"/>

        <TextView
            android:id="@+id/textView_url"
            tools:text="url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/black"
            android:layout_below="@+id/textView_login"
            android:layout_toEndOf="@+id/imageView_avatar"
            android:layout_marginTop="@dimen/space"
            android:layout_marginStart="@dimen/space" />

    </RelativeLayout>

</layout>