<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="addWordEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/space_x2</item>
        <item name="android:layout_marginEnd">@dimen/space_x2</item>
        <item name="android:layout_marginTop">@dimen/space_x2</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
